{
    "name": "bugarinov/chain-validation",
    "description": "Classes which implements the Chain of Command pattern in validating data. Intended primary use is for handling complex validations.",
    "type": "library",
    "version": "0.1.0",
    "authors": [
        {
            "name": "Yuliy Bugarinov",
            "email": "bugarindev@yahoo.com"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Bugarinov\\ChainValidation\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bugarinov\\ChainValidation\\Tests\\": "tests"
        }
    },
    "scripts": {
        "deploy": [
            "rm -r dist/src",
            "cp -r src dist/src",
            "cp composer.json dist/composer.json"
        ],
        "test":[
            "phpunit -c phpunit.xml"
        ]
    }
}
